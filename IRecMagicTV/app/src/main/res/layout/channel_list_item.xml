<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@android:id/text1"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/altButton"
        android:layout_toStartOf="@+id/altButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@android:id/text2"
        android:textColor="#999999"
        android:layout_below="@android:id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/altButton"
        android:layout_toLeftOf="@+id/altButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/statusText"
        android:layout_toLeftOf="@+id/altButton"
        android:layout_toStartOf="@+id/altButton"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@android:id/text2"
        android:layout_alignWithParentIfMissing="true"
        android:visibility="gone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALT"
        android:id="@+id/altButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/recButton"
        android:layout_toStartOf="@+id/recButton"
        android:textColor="@color/alt_text_selector"
        android:layout_alignWithParentIfMissing="true"
        android:focusable="false"
        android:visibility="gone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REC"
        android:id="@+id/recButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/favButton"
        android:layout_toStartOf="@+id/favButton"
        android:textColor="@color/rec_text_selector"
        android:layout_alignWithParentIfMissing="true"
        android:focusable="false"
        android:visibility="gone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â™¥"
        android:id="@+id/favButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignWithParentIfMissing="true"
        android:textColor="@color/rec_text_selector"
        android:focusable="false"
        android:visibility="gone"/>

</RelativeLayout>